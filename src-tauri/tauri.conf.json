{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "amir",
  "version": "1.0.0",
  "identifier": "com.amir.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Auto Mod Installer",
        "width": 800,
        "height": 600,
        "devtools": false,
        "resizable": false,
        "closable": true,
        "maximizable": false,
        "hiddenTitle": true,
        "minimizable": false,
        "zoomHotkeysEnabled": false,
        "center": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}